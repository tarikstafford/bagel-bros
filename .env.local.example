# Copy this file to .env.local for local development
# Do not commit .env.local to version control

# Shopify Configuration
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_access_token_here
SHOPIFY_ADMIN_ACCESS_TOKEN=your_admin_access_token_here

# Drop Configuration
# Options: pre-drop, live, sold-out
NEXT_PUBLIC_DROP_MODE=pre-drop
NEXT_PUBLIC_DROP_DATE=2026-03-15T10:00:00Z

# App Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
